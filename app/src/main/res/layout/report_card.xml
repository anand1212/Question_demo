<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/main"
    tools:context="com.example.qtm_android.question_demo.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello Folks"
        android:id="@+id/folks"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Final Score is :"
        android:id="@+id/marksfinal"
        android:layout_below="@+id/folks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rel1"
        android:background="#FFE4C4"
        android:layout_below="@+id/marksfinal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" who is chief minister of gujarat ,now ?"
            android:id="@+id/question_final"
            android:textSize="20dp"
            android:layout_below="@+id/test_paper"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_group_final"
            android:layout_below="@+id/question_final"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnandiBen Patel"
                android:id="@+id/radioButton_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Narendra Modi"
                android:id="@+id/radioButton2_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viajy Rupani"
                android:id="@+id/radioButton3_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daud Ebrahim"
                android:id="@+id/radioButton4_final"
                android:layout_gravity="center_horizontal" />
        </RadioGroup>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rel2"
        android:background="#F5F5DC"
        android:layout_below="@+id/rel1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Who is The Prime Minister of India ?"
            android:id="@+id/question_2_final"
            android:textSize="20dp"
            android:layout_below="@+id/test_paper2"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_group2"
            android:layout_below="@+id/question_2_final"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajnath sinh"
                android:id="@+id/radioButton_1_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Narendra Modi"
                android:id="@+id/radioButton_2_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sony Gandhi"
                android:id="@+id/radioButton_3_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papu gandhi"
                android:id="@+id/radioButton_4_final"
                android:layout_gravity="center_horizontal" />
        </RadioGroup>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rel3"
        android:background="#F0FFFF"
        android:layout_below="@+id/rel2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Who is First President Of India ?"
            android:id="@+id/question_3_final"
            android:textSize="20dp"
            android:layout_below="@+id/test_paper3"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_group3_final"
            android:layout_below="@+id/question_3_final"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaharlal Nehru"
                android:id="@+id/radioButton_31_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A.P.J.Abdul kalam"
                android:id="@+id/radioButton_32_final"
                android:layout_gravity="center_horizontal"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajemdra Prasad"
                android:id="@+id/radioButton_33_final"
                android:layout_gravity="center_horizontal" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saradar Vallabhbhai Patel"
                android:id="@+id/radioButton_34_final"
                android:layout_gravity="center_horizontal" />
        </RadioGroup>
        </RelativeLayout>
</RelativeLayout>